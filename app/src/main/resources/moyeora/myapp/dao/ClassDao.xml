<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="moyeora.myapp.dao.ClassDao">
  <resultMap id="ClassMap" type="Class">
    <id column="class_no" property="no"/>
    <result column="user_no" property="userNo"/>
    <result column="school_no" property="schoolNo"/>
    <result column="name" property="name"/>
    <result column="security" property="security"/>
    <result column="content" property="content"/>
    <result column="location" property="location"/>
    <result column="start_at" property="startAt"/>
    <result column="created_at" property="createdAt"/>
    <result column="ended_at" property="endedAt"/>
    <result column="member" property="member"/>
    <result column="repeat_set" property="repeatSet"/>
    <result column="photo" property="photo"/>
    <result column="now_member_count" property="nowMemberCount"/>
    <result column="location_detail" property="locationDetail"/>
  </resultMap>

  <select id="findByDate" resultMap="ClassMap" parameterType="String">
    select
      class_no,
      (select count(*) from class_users as u where c.class_no = u.class_no) as now_member_count,
      name,
      security,
      content,
      location,
      start_at,
      member,
      photo
    from
      classes as c
    where
      now_at = '${date}'
  </select>

  <select id="findByUserAddress" resultMap="ClassMap" parameterType="String">

  </select>

<insert id="add" parameterType="Class">
    insert into classes(school_no,user_no,name,security,content,location,start_at,created_at,ended_at,member,repeat_set,photo,location_detail)
    values(#{schoolNo},#{userNo},#{name},#{security},#{content},#{location},#{startAt},current_timestamp,#{endedAt},#{member},#{repeatSet},
    #{photo},#{locationDetail})
</insert>



</mapper>