select
 cu.class_no,
 cu.user_no,
 cu.school_no,
 u.nickname,
 u.photo,
 su.level_no,
 l.name as level_name
 from
 class_users as cu
 inner join users as u on cu.user_no = u.user_no
 inner join school_users as su on cu.user_no = su.user_no and su.school_no = cu.school_no
 inner join levels as l on su.level_no = l.level_no
 where
 cu.class_no = #{classNo};

</select>

